{
  "version": 2,
  "builds": [
    { "src": "api/**/*.ts", "use": "@vercel/node" },
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "build" } }
  ],
  "routes": [
    { "src": "/api/gardens", "dest": "/api/gardens.ts" },
    { "src": "/api/gardens/.*", "dest": "/api/garden.ts" },
    { "src": "/api/hello", "dest": "/api/hello.ts" },
    { "src": "^/static/(.*)", "dest": "/static/$1" },
    { "src": ".*", "dest": "/index.html" }
  ]
}
