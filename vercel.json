{
  "version": 2,
  "builds": [
    { "src": "api/**/*.ts", "use": "@vercel/node" },
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } }
  ],
  "routes": [
    { "src": "/gardens", "dest": "/api/gardens.ts" },
    { "src": "/gardens/.*", "dest": "/api/garden.ts" },
    { "src": ".*", "dest": "/index.html" }
  ]
}
